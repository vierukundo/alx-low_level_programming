# Variables: CC, SRC, NAME
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)  # Generate object file names from source file names
NAME := school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: m.h
	$(CC) $(CFLAGS) -c main.c -o $@
school.o: m.h
	$(CC) $(CFLAGS) -c school.c -o $@

fclean: clean oclean

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
re: oclean all

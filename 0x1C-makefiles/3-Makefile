# Variables: CC, SRC, NAME
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)  # Generate object file names from source file names
NAME := school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: m.h
school.o: m.h

fclean: clean oclean

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
re: oclean all
